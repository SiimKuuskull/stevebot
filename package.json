        "eslint-plugin-prettier": "^4.0.0",
        "mocha": "^9.2.1",
        "nodemon": "^2.0.19",
        "prettier": "^2.5.1",
        "rimraf": "^3.0.2",
        "ts-node": "^10.7.0",
        "typescript": "^4.5.4"
    },
    "mocha": {
        "require": [
            "ts-node/register/transpile-only"
        ],
        "timeout": 20000,
        "extension": [
            "ts"
        ]
    }
