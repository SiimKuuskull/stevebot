        "chalk": "^4.1.2",
        "discord": "^0.8.2",
        "discord-api-types": "^0.37.5",
        "discord.js": "^14.3.0",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "knex": "^2.2.0",
        "knex-stringcase": "^1.4.6",
        "lodash": "^4.17.21",
        "node-fetch": "^2.6.7",
        "pg": "^8.7.3",
        "source-map-support": "^0.5.21"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/mocha": "^9.1.0",
